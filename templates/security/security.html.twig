{% extends 'base.html.twig' %}

{% block body %}
    <section class="login-section">
        <div class="page-content">
            <div class="form-content">
                <div class="form-left">
                    <img src="{{ asset('images/ramen.jpg') }}" alt="Login Form Image">
                </div>
                <form action="{{ path('login') }}" method="post" class="form-detail">

                    <h2 id="login-heading">Login Form</h2>

                    {% if error %}
                        <div role="alert" aria-labelledby="login-heading">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-row">
                        <label for="username">Email:</label>
                        <input class="input-text" type="text" id="username" name="_username" value="{{ last_username }}" aria-required="true" aria-label="email">
                    </div>

                    <div class="form-row">
                        <label for="password">Password:</label>
                        <input class="input-text" type="password" id="password" name="_password" aria-required="true" aria-label="password">
                    </div>

                    {# This is where we store a long-lived "remember me" cookie in the user's browser.#}
                    <input type="checkbox" name="_remember_me" id="rememberMe" aria-label="Remember me">

                    <label for="rememberMe" aria-hidden="true">Remember me</label>

                    <div class="btn-form">
                        <button type="submit">Sign in</button>
                    </div>

                    {# ARIA attributes for CSRF token #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="signup-button-container">
                        <p>Don't have an account yet?</p>
                        <a href="{{ path('register') }}" class="btn-form-small">Sign up</a>
                    </div>

                </form>
            </div>
        </div>
    </section>
{% endblock %}


{% set pageRoute = 'login' %}