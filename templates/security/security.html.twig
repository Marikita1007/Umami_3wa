{% extends 'base.html.twig' %}

{# Loop through flash messages of different types (e.g., success, error, info) #}
{# MARIKA TODO I added this to show error message if non login user try to access to create new recipe page #}
{% block messages %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block body %}
    <section class="login-section">
        <div class="page-content">
            <div class="form-content">
                <div class="form-left">
                    <img src="{{ asset('images/ramen.jpg') }}" alt="Login Form Image">
                </div>
                <form class="form-detail" method="post" action="">
                    <h2>Login Form</h2>

                    {% if error %}
                        <div role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-row">
                        <label for="inputEmail" class="visually-hidden">Email:</label>
                        <input type="email" name="email" id="inputEmail" class="input-text" value="{{ last_username }}" placeholder="Email Address" required autofocus>
                    </div>

                    <div class="form-row">
                        <label for="inputPassword" class="visually-hidden">Password</label>
                        <input type="password" name="password" id="inputPassword" class="input-text" placeholder="Password" required>
                    </div>

                    <input type="checkbox" name="_remember_me" id="rememberMe" aria-label="Remember me">
                    <label for="rememberMe" aria-hidden="true">Remember me</label>

                    <div class="btn-form">
                        <button type="submit" name="signIn" value="signIn">Sign in</button>
                    </div>

                    {# ARIA attributes for CSRF token #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" aria-hidden="true" tabindex="-1">

                    <p>Don't have an account yet? <a href="{{ path('register') }}">Sign up</a></p>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

{% set pageRoute = 'login' %}