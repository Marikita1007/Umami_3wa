{% extends 'base.html.twig' %}

{% block title %}Register Form{% endblock %}

{% block body %}
    <section class="registration-section">
        <div class="page-content">
            <div class="form-content">
                <div class="form-left">
                    <img src="{{ asset('images/ramen.jpg') }}" alt="Registration Form Image">
                </div>
                <form class="form-detail" action="#" method="post">
                    <h2>Register Form</h2>

                    {{ form_row(registrationForm.email, {
                        label: 'Email Address',
                        label_attr: { class: 'visually-hidden' },
                        attr: {
                            class: 'input-text',
                            placeholder: 'Email Address',
                            required: 'required',
                        }
                    }) }}

                    {{ form_row(registrationForm.username, {
                        label: 'Username',
                        label_attr: { class: 'visually-hidden' },
                        attr: {
                            class: 'input-text',
                            placeholder: 'Username',
                            required: 'required',
                        }
                    }) }}

                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        label_attr: { class: 'visually-hidden' },
                        attr: {
                            class: 'input-text',
                            placeholder: 'Password',
                            required: 'required'
                        }
                    }) }}

                    {{ form_row(registrationForm.confirmPassword, {
                        label: 'Confirm Password',
                        label_attr: { class: 'visually-hidden' },
                        attr: {
                            class: 'input-text',
                            placeholder: 'Confirm Password',
                            required: 'required'
                        }
                    }) }}

                    {# Check box for the term agreement #}
                    {{ form_row(registrationForm.agreeTerms) }}

                    {# Create valid CSRF token #}
                    {{ form_row(registrationForm._token) }}

                    {# form_rest renders all fields that have not yet been rendered for the given form #}
                    {{ form_rest(registrationForm) }}
                    <div class="btn-form">
                        <button type="submit" name="register" class="register">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}

